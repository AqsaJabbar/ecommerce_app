<%if current_user.seller?%><div class="text-white bg-dark"><center><h1><%= current_user.shop.name%> </h1></div></center><%end%>
<div class="text-dark bg-light"><h1>Cart</h1></div>

<table id="cart_item-table-id" class="table">
<thead class="thead-light">
<tr>
<th scope="col">Name</th>
<th scope="col">Description</th>
<th scope="col">Price</th>
<th scope="col">Action</th>
</tr>
</thead>

<tbody>
<% @cart_items.each do |cart_item| %>
<tr>
<td><%= cart_item.product.title %></td>
<td><%= cart_item.product.description %></td>
<td><%= cart_item.product.price %></td>
<td> <button class="btn btn-light"><%= link_to 'Destroy', cart_item_path(cart_item), method: :delete, data: { confirm: 'Are you sure?' } %>
     </button>  </td>
<%end%>
</tbody>
</table>
<center><button class="btn btn-light"><%= link_to 'Checkout', copy_order_items_path%>
     </button></center>
<br>
<script>
$(document).ready( function () {
$('#cart_item-table-id').DataTable();
} );
</script>
