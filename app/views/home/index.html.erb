<div class="text-dark bg-light"><h1>Shop Now</h1></div>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <tr>
     <div>
       <div class="container">
         <div class="row">
    <% @products.each do |product| %>
     
      <div class="col-md-4">
                <div class="card" style="width: 18rem; height: 26rem;">
                <% if product.image_url %>
                  <img class="card-img-top" alt=""> <%= link_to image_tag(product.image_url(:thumb)),admin_product_path(product)%>
                  <%end%>
                  <div class = "card-body">
                   <h3 class="card-title"><%= product.title %></h3>
                   <h5 class="card-text"><%= product.description %></h5>
                   <a herf="#" class="card-link" ><%= link_to 'Show', admin_product_path(product) %></a>
                  <%if can? :edit,product%>
                  <a herf="#" class="card-link" ><%= link_to 'Edit', edit_admin_product_path(product) %></a>
                  <%end%>
                  <%if can? :destroy,product%>
                  <a herf="#" class="card-link" ><%= link_to 'Destroy',admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></a>
                  <%end%>
                  </div>
                </div>
             </div>
    <% end %>
    </div>
    </div>
    </div>
    <br>
</tr>
  </tbody>
</table>

