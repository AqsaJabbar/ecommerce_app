
<div class="form-group">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-4">
        <div class="card">
          <div class="card-body">
          <h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
<div calss="mb-3">
<div class="form-label"><%= f.label :firstname %></div>
  <%= f.text_field :firstname %>


  <div class="field">
    <div class="form-label"> <%= f.label :email %><br /></div>
   <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  
  </div>
  <div class="form-label"><%= f.label :phone%></div>
    <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
  

  
    <div class="form-label"><%= f.label :address%></div>
   <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  

  <div class="field">
    <div class="form-label"> <%= f.label :password %></div>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
   <div class="form-label">  <%= f.label :password_confirmation %><br /></div>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
<br />

 <div class="form-label"><%= f.label :status%>
  <%= f.select :role, ['seller','buyer'], autofocus: true, autocomplete: "status"%>
  </div>
      <div class="form-label" id="city"><%= f.label :city %>
      <%= f.select :city_id, City.all.pluck(:name, :id), {},
                         { class: 'select2-simple-dropdown form-control'}  %></div>
<br />

  <div class="actions">
  <div class="btn btn-gray">
    <%= f.submit "Sign up" %>
  </div>
  </div>
  </div>
<% end %>

<%= render "users/shared/links" %>

    </div>  
</div>
</div>
</div>
</div>
</div>
<script>
$(".select2-simple-dropdown").select2({
    placeholder: "Select a city",
    allowClear: true

});

</script>
